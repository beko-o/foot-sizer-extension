
{
    "name": "Foot Sizer",
    "description": "Helps users find the correct shoe size based on various foot measurement standards.",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        },
        "default_title": "Foot Sizer"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
